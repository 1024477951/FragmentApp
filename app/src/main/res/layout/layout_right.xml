<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_right"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/d35.0"
    android:paddingRight="@dimen/d35.0"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_stars"
        android:layout_width="@dimen/d120.0"
        android:layout_height="@dimen/d120.0"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_radius_ffffff_100"
        android:gravity="center"
        android:scaleType="center"
        app:srcCompat="@mipmap/icon_stars_add"
        android:visibility="visible"/>

    <LinearLayout android:id="@+id/item_delete"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d120.0"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/d35.0"
        android:background="@drawable/shape_radius_ffffff_100"
        android:layout_gravity="center"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView android:id="@+id/iv_del"
            android:layout_width="@dimen/d120.0"
            android:layout_height="@dimen/d120.0"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:scaleType="center"
            app:srcCompat="@mipmap/icon_stars_del"/>

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/d10.0"
            android:layout_marginRight="@dimen/d10.0"
            android:gravity="center"
            android:textColor="@color/color_ff4036"
            android:textSize="@dimen/d46.0"
            android:text="确定删除"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>