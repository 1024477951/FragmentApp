<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f8f8f8"
    android:layout_gravity="bottom"
    android:padding="@dimen/d35.0"
    android:orientation="vertical"
    android:id="@+id/root">

    <EditText android:id="@+id/et_comment"
        android:layout_width="@dimen/d0.0"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_ffffff_16_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/rvImgList"
        android:maxLines="3"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvImgList"
        android:layout_width="@dimen/d0.0"
        android:layout_height="@dimen/d200.0"
        app:layout_constraintTop_toBottomOf="@+id/et_comment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_send"
        android:background="@drawable/shape_radius_ffffff_16_bottom"
        app:layoutManager="LinearLayoutManager"
        android:orientation="horizontal"/>

    <ImageView android:id="@+id/iv_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_send"
        app:layout_constraintTop_toTopOf="@+id/et_comment"
        android:src="@mipmap/icon_keyboard_full"/>

    <TextView android:id="@+id/tv_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/d42.0"
        android:textColor="@color/color_338eff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/rvImgList"
        app:layout_constraintLeft_toRightOf="@+id/rvImgList"
        android:layout_marginLeft="@dimen/d35.0"
        android:layout_marginRight="@dimen/d10.0"
        android:text="发送"/>
    <ImageView android:id="@+id/iv_emoji"
        android:layout_width="@dimen/d70.0"
        android:layout_height="@dimen/d70.0"
        app:layout_constraintTop_toBottomOf="@+id/rvImgList"
        app:layout_constraintLeft_toLeftOf="@+id/rvImgList"
        android:layout_marginTop="@dimen/d15.0"
        android:layout_marginLeft="@dimen/d40.0"
        android:src="@mipmap/icon_keyboard_emoji_no"/>

    <ImageView android:id="@+id/iv_img"
        android:layout_width="@dimen/d70.0"
        android:layout_height="@dimen/d70.0"
        app:layout_constraintTop_toTopOf="@+id/iv_emoji"
        app:layout_constraintLeft_toRightOf="@+id/iv_emoji"
        android:layout_marginLeft="@dimen/d50.0"
        android:src="@mipmap/icon_keyboard_img_no"/>

    <View android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1.0"
        android:layout_marginTop="@dimen/d10.0"
        app:layout_constraintTop_toBottomOf="@+id/iv_emoji"
        android:background="@color/color_ffffff"/>

    <LinearLayout android:id="@+id/layout_emoji"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d730.0"
        app:layout_constraintTop_toBottomOf="@+id/view_bottom"
        android:padding="@dimen/d10.0"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d0.0"
            android:layout_weight="1"/>

        <!--<com.fragmentapp.view.bounce.LinIndicate-->
            <!--android:id="@+id/view_indicate"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:background="@color/color_ffffff"-->
            <!--android:gravity="center"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/viewPager"-->
            <!--android:layout_marginTop="@dimen/d10.0"/>-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10.0">
            <ImageView android:id="@+id/iv_emoji_bottom"
                android:layout_width="@dimen/d70.0"
                android:layout_height="@dimen/d70.0"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_keyboard_emoji_no"/>

            <ImageView android:id="@+id/iv_emoji_del"
                android:layout_width="@dimen/d70.0"
                android:layout_height="@dimen/d70.0"
                android:layout_gravity="right|center_vertical"
                android:src="@mipmap/compose_emotion_delete"/>
        </FrameLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>