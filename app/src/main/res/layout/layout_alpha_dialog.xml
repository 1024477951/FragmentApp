<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/d480.0"
        android:layout_height="@dimen/d340.0"
        android:layout_gravity="center"
        android:alpha="0.5"
        android:background="@drawable/shape_radius_000000_30"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d75.0"
            android:src="@mipmap/icon_sound_start" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d40.0"
            android:layout_marginLeft="@dimen/d110.0"
            android:layout_marginRight="@dimen/d110.0"
            android:layout_marginTop="@dimen/d74.0"
            android:gravity="center"
            android:text="content"
            android:textColor="@color/color_FFFEFE"
            android:textSize="@dimen/d44.0" />

    </LinearLayout>
</FrameLayout>