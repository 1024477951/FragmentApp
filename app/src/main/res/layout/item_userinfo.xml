<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:id="@+id/spacing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d58.0"
        android:visibility="visible" />

    <View
        android:id="@+id/spacing_"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1.0"
        android:background="@color/color_dddddd"
        android:visibility="visible" />


    <RelativeLayout
        android:id="@+id/btn_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d126.0"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/tv_userTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d43.0"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/d46.0" />

        <TextView
            android:id="@+id/tv_userCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="@dimen/d72.0"
            android:layout_toRightOf="@id/tv_userTitle"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/d46.0" />

        <ImageView
            android:layout_width="@dimen/d24.0"
            android:layout_height="@dimen/d42.0"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d44.0"
            android:background="@mipmap/icon_arrow" />

    </RelativeLayout>

    <View
        android:id="@+id/postion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1.0"
        android:background="@color/color_dddddd"
        android:visibility="visible" />

</LinearLayout>
