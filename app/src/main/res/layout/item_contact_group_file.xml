<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1.0"
        android:layout_marginLeft="@dimen/d30.0"
        android:layout_marginRight="@dimen/d30.0"
        android:background="@color/color_dddddd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/d30.0" >

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/d170.0"
            android:layout_height="@dimen/d170.0"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_file_other"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/d27.0"
            android:layout_toRightOf="@+id/img_icon">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="11111111111111111111"
                android:textColor="@color/color_111111"
                android:textSize="@dimen/d40.0" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/lin_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/d27.0"
            android:layout_toRightOf="@+id/img_icon"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="@dimen/d0.0"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:lines="1"
                android:text="11111111111111111111"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/d36.0" />

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d15.0"
                android:text="0kb"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/d36.0" />
        </LinearLayout>
    </RelativeLayout>

    <View android:id="@+id/group_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d20.0"
        android:background="@color/color_EEEEEE" />

</LinearLayout>