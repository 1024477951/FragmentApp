<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_10sp</item>
    </style>

    <declare-styleable name="pressureview">
        <!--<attr name="color" format="color" />
        color：按钮颜色
        bezierradio：初始状态按钮的圆角度数。
        animduration：动画时间
        scale_ranger：压下后放大的倍数（>1)
        bezierradion_range：压下后形变程度-->
        <attr name="bezierradio" format="float" />
        <attr name="animduration" format="integer" />
        <attr name="scale_ranger" format="float" />
        <attr name="bezierradion_range" format="float" />
    </declare-styleable>

    <declare-styleable name="RefreshLayout">
        <attr name="_height" format="dimension"/>
    </declare-styleable>

</resources>
